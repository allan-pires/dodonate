<% provide(:title, 'Items') %>

<div class="container">
  <h1>My items for donation</h1>

  <div class="row">
    <div class="jumbotron">
      <div class="subtext">
        <% current_user.items.order("id asc").each do |item| %>
          <p>
            ( <%= item.quantity %> ) <%= item.name %> 
            <%= link_to fa_icon('pencil'), edit_item_path(item), class: 'blue' %>  
            <%= link_to fa_icon('trash'), item_path(item.id), class: 'red', data: { confirm: 'Are you sure you?' }, method: :delete %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>  
