<% provide(:title, 'Items') %>

<div class="container row">
  <div class="container">
    <h1>Items for donation</h1>
  </div>
    <div class="col-md-8">
      <div class="jumbotron">
        <div class="subtext">
          <% if !@own_items.empty? %>
            <h2>My items</h2>
            <% @own_items.each do |item| %>
              <p>
                ( <%= item.quantity %> ) <%= item.name %> 
                <%= link_to fa_icon('pencil'), edit_item_path(item), class: 'edit-item' %>  
                <%= link_to fa_icon('trash'), item_path(item.id), class: 'delete-item', data: { confirm: 'Are you sure you?' }, method: :delete %>
              </p>
            <% end %>
          <% end %>
        </div>
        <div class="subtext">
          <h2>Other items</h2>
          <% @other_items.each do |item| %>
            <p>
              <%= link_to "( #{item.quantity} ) #{item.name}", item_path(item.id)  %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="subtext tips">
        <p> Here you can edit or remove items you added for donation.</p>
        <p> You can also look for an item you want and get in touch with the person who announced it.</p> 
      </div>
    </div>
</div>  
<div class="container">
<%= button_to "Back", { action: "home", controller: "static_pages" }, method: :get, class: "btn btn-primary btn-small" %>
</div>


